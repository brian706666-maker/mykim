int main() {
    int signalStatus;   // 1: Green, 2: Yellow, 3: Red
    double currentSpeed;
    const double SPEED_LIMIT_YELLOW = 45.0; // ÏÑúÌñâ Íµ¨Í∞Ñ Ï†úÌïú ÏÜçÎèÑ
    const double MAX_SAFE_SPEED = 120.0;    // Ï†àÎåÄ Ï†úÌïú ÏÜçÎèÑ

    printf("=== [Day 2] ATP (Automatic Train Protection) System ===\n");
    
    // 1. ÏÑºÏÑú Îç∞Ïù¥ÌÑ∞ ÏûÖÎ†• ÏãúÎÆ¨Î†àÏù¥ÏÖò
    printf("Signal (1:Green, 2:Yellow, 3:Red): ");
    scanf("%d", &signalStatus);
    printf("Current Train Speed (km/h): ");
    scanf("%lf", &currentSpeed);

    printf("\n--- Safety Analysis ---\n");

    // 2. Îã§Ï§ë Ï°∞Í±¥Î¨∏ÏùÑ ÌôúÏö©Ìïú ÏïàÏ†Ñ Î°úÏßÅ (Rule-based Decision Making)
    // Ïù¥ Î°úÏßÅÏùÄ Ìñ•ÌõÑ AI ÏùòÏÇ¨Í≤∞Ï†ï ÎÇòÎ¨¥(Decision Tree) Î™®Îç∏Ïùò Í∏∞Î∞òÏù¥ Îê®
    
    if (currentSpeed > MAX_SAFE_SPEED) {
        printf("[CRITICAL] üö® OVER SPEED! Immediate emergency braking required.\n");
    }
    else if (signalStatus == 3) { // Red Signal
        printf("[ALARM] üö® STOP SIGNAL! Emergency brake engaged.\n");
    }
    else if (signalStatus == 2) { // Yellow Signal
        if (currentSpeed > SPEED_LIMIT_YELLOW) {
            printf("[WARNING] ‚ö†Ô∏è CAUTION! Speed exceeds limit (45km/h) for Yellow signal.\n");
        } else {
            printf("[INFO] ‚úÖ Safe approach under Yellow signal.\n");
        }
    }
    else if (signalStatus == 1) { // Green Signal
        printf("[INFO] ‚úÖ Normal operation. Track is clear.\n");
    }
    else {
        printf("[ERROR] ‚ùì Unknown signal state. Fail-safe mode activated.\n");
    }

    return 0;
}
